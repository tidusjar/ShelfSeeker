{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "../src/types.ts",
    "../src/irc/**/*",
    "../src/parser/searchResultParser.ts"
  ],
  "exclude": ["node_modules", "dist", "../src/**/*.test.ts"]
}
